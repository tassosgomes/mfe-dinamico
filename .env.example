# MFE RBAC POC - Environment Variables Example
# Copy this file to .env and update with your values

# ============================================================================
# KEYCLOAK CONFIGURATION
# ============================================================================
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=mfe-poc
KEYCLOAK_CLIENT_ID=mfe-host-client
# Public client (PKCE) n√£o utiliza secret em desenvolvimento
KEYCLOAK_CLIENT_SECRET=

# ============================================================================
# BACKEND API CONFIGURATION
# ============================================================================
API_URL=http://localhost:3000
API_PORT=3000
NODE_ENV=development

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:5175,http://localhost:5176

# ============================================================================
# MODULE FEDERATION CONFIGURATION
# ============================================================================
# URLs dos remotes (para desenvolvimento local)
ADMIN_REMOTE_URL=http://localhost:5174
SALES_REMOTE_URL=http://localhost:5175
USER_REMOTE_URL=http://localhost:5176

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# Token refresh buffer (ms) - refresh token X ms before expiration
TOKEN_REFRESH_BUFFER=60000

# JWKS cache TTL (ms)
JWKS_CACHE_TTL=600000

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_DEBUG=true
ENABLE_MOCK_AUTH=false
ENABLE_REMOTE_CACHE=true
